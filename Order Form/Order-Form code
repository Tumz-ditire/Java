    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
                int basePrice = 0;
        int bedrooms = 0;
        int garageCars = 0;
        int totalPrice = 0;

        if (jRadioButton1.isSelected()){
            basePrice = 110000;
        }
        if (jRadioButton2.isSelected() || jRadioButton3.isSelected()){
            basePrice = 120000;
        }
        if (jRadioButton4.isSelected()){
            basePrice = 130000;
        }
        
        if (jRadioButton5.isSelected()){
            bedrooms = 2;
        } 
        else if(jRadioButton6.isSelected()){
            bedrooms = 3;
        }
        else if (jRadioButton7.isSelected()){
            bedrooms = 4;
        }
        int bedroomsPrice = bedrooms * 10500;
        
        if (jRadioButton9.isSelected()){
            garageCars = 1;            
        }
        else if (jRadioButton10.isSelected()){
            garageCars = 2;
        }
        else if (jRadioButton11.isSelected()){
            garageCars = 3;
        }
        int garagePrice = garageCars * 7775;
        
        totalPrice = basePrice + bedroomsPrice + garagePrice;
        jTextField1.setText("R" + Integer.toString(totalPrice));

    }                                        

